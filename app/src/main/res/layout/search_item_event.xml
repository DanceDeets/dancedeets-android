<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="6dip"
    android:paddingLeft="6dip"
    android:paddingRight="6dip"
    android:paddingBottom="20dip"
    >

    <com.dancedeets.android.util.PlaceholderNetworkImageView
        android:id="@+id/event_list_cover"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:contentDescription="@null"
        android:src="@null" />

    <TextView
        android:id="@+id/event_list_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@id/event_list_cover"
        android:gravity="center_vertical"
        android:text="Event Title"
        android:maxLines="2"
        android:textColor="@color/link_blue"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/event_list_location"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_list_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Event Location"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/event_list_start_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_list_location"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Event Date/Time"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/event_list_categories"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_list_start_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Event Categories"
        android:textSize="12sp" />


</RelativeLayout>